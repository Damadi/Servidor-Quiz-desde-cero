<form method="get" action="/quizes">
	<input type="text" style="width: 200px;" name="search" placeholder="bucar pregunta..." />
	<input type="submit" value="Buscar" />
</form>
<table>
	<%	
	 var i; for(i=0; i < quizes.length;i++) {
	 %>	 
		<tr>
			<td>
				<a href="/quizes/<%= quizes[i].id%>"><%= quizes[i].pregunta%></a>
			</td>
			<td>
				<a href="/quizes/<%= quizes[i].id%>/edit"><button>editar</button></a>
			</td>
			<td>
				<form method="post" action="/quizes/<%= quizes[i].id%>?_method=delete">
					<button type="submit" onclick="return confirm('Borrar: <%= quizes[i].pregunta %>');">Borrar</button>
				</form>
			</td>
		</tr>
	<% } %>
</table><p>
<a href="/quizes/nuevo"><button type="button">Crear pregunta</button></a>
